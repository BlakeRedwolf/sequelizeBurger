<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 text-center" id="top-bar">
			<h1>Devourer of Burgers!</h1>
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offest-3 text-center" class="task">
				<div class="panel panel-info">
					<div class="panel-heading">Add a Burger, Devour a Burger</div>
					<div class="panel-body">
						<div class="table-responsive">
							<table class="table table-bordered">
								<tbody>
									{{#each burger_data}}
										{{#unless this.devoured}}
											<tr class="col-xs-9 text-center">
												<td class="info">{{this.id}}</td>
												<td class="info">{{this.burger_name}}</td>
												<td class="active">
													<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
													<input type="hidden" name="burger_id" type="text" value="{{this.id}}">
													<br>
													<button type="submit" class="btn btn-info btn-lg">Devour</button>
													</form>
												</td>
											</tr>
									{{/unless}}
									{{/each}}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
			<div class="panel panel-info">
				<div class="panel-body">
					{{#each burger_data}}
						{{#if this.devoured}}
							<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
						{{/if}}
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
				<button type="submit" class="btn btn-info" id="text-enter-button">Submit</button>
			</form>
			<p>Enter a burger</p>
		</div>
	</div>
</div>